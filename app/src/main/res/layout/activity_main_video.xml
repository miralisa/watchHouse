<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anastasiia.watchhouse.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/responseTextView"
        android:text="Welcome in watchHouse!\n\nChoose a way you will use your smartphone :\nCamera or Watcher\n\nStay safe ;)"
        android:textSize="9pt"
        android:gravity="center_vertical|center_horizontal" />


    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="175dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_action_camera"
        android:id="@+id/btnServeur"
        android:minWidth="90dp"
        android:minHeight="90dp"
        android:layout_marginRight="20dp"
        android:scaleType="fitXY"
        />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_action_phone"
            android:id="@+id/btnClient"
            android:minWidth="90dp"
            android:minHeight="90dp"
            android:scaleType="fitXY"
              />


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginBottom="79dp"
        android:id="@+id/textView"
        android:textSize="9pt"
        android:gravity="center_vertical|center_horizontal"/>
</RelativeLayout>
